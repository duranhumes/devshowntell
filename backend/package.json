{
    "name": "devshowntell-backend",
    "version": "1.0.0",
    "repository": "git@github.com:duranhumes/devshowntell.git",
    "author": "Duran Humes <duranhumes@gmail.com>",
    "license": "MIT",
    "description": "",
    "main": "build/index.js",
    "scripts": {
        "start": "npx cross-env DEBUG=api NODE_ENV=development npx nodemon --exec npx ts-node src/index.ts",
        "build": "npx rimraf build && npx cross-env npx tsc && node copy.js",
        "prod": "npx cross-env yarn build && npx cross-env NODE_ENV=production npx pm2 start ecosystem.config.js --env production",
        "docker": "docker-compose up -d --remove-orphans",
        "lint": "npx tslint --project tsconfig.json",
        "lint:fix": "npx tslint --project tsconfig.json --fix",
        "prettier": "npx prettier --write '**/*.{ts,js,json}'",
        "gen:keys": "node keys.js"
    },
    "husky": {
        "hooks": {
            "pre-push": "yarn prettier && yarn lint:fix"
        }
    },
    "dependencies": {
        "bunyan": "2.0.2",
        "bunyan-express-serializer": "1.0.0",
        "bunyan-rotating-file-stream": "1.6.3",
        "compression": "1.7.3",
        "cors": "2.8.5",
        "dotenv-safe": "6.1.0",
        "escape-html": "1.0.3",
        "express": "4.16.4",
        "express-session": "^1.15.6",
        "express-validator": "5.3.1",
        "helmet": "3.15.1",
        "hpp": "0.2.2",
        "jsonwebtoken": "8.5.0",
        "passport": "0.4.0",
        "passport-github": "^1.1.0",
        "passport-google-oauth": "^1.0.0",
        "passport-twitter": "^1.0.4",
        "rate-limiter-flexible": "0.23.1",
        "reflect-metadata": "0.1.13",
        "shelljs": "^0.8.3",
        "socket.io": "^2.2.0",
        "uuid": "3.3.2"
    },
    "devDependencies": {
        "@types/bunyan": "1.8.5",
        "@types/compression": "0.0.36",
        "@types/cors": "2.8.4",
        "@types/debug": "4.1.2",
        "@types/dotenv-safe": "5.0.3",
        "@types/escape-html": "0.0.20",
        "@types/expect": "1.20.4",
        "@types/express": "4.16.1",
        "@types/express-session": "^1.15.12",
        "@types/helmet": "0.0.43",
        "@types/hpp": "0.2.1",
        "@types/jsonwebtoken": "8.3.2",
        "@types/morgan": "1.7.35",
        "@types/node": "11.10.5",
        "@types/passport": "1.0.0",
        "@types/passport-github": "^1.1.4",
        "@types/passport-google-oauth": "^1.0.39",
        "@types/passport-twitter": "^1.0.34",
        "@types/shelljs": "^0.8.3",
        "@types/socket.io": "^2.1.2",
        "@types/uuid": "3.4.4",
        "cross-env": "5.2.0",
        "husky": "1.3.1",
        "morgan": "1.9.1",
        "nodemon": "1.18.10",
        "pm2": "3.3.1",
        "prettier": "1.16.4",
        "ts-node": "8.0.3",
        "tslint": "5.13.1",
        "tslint-clean-code": "^0.2.9",
        "tslint-config-airbnb": "5.11.1",
        "tslint-config-prettier": "1.18.0",
        "tslint-immutable": "^5.3.2",
        "typescript": "3.3.3"
    }
}
